<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyProjects" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0c90f1</item>
        <item name="colorPrimaryVariant">#0591f8</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- ActionBar und Title deaktivieren -->
    <style name="Theme.MyProjects.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Theme fÃ¼r die AppBar -->
    <style name="Theme.MyProjects.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="tint">@color/white</item>
    </style>

    <style name="Theme.MyProjects.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>